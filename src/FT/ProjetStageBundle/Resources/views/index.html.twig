                <li id="navBarConnexion"><a href="{{ path('ft_personne_connexion') }}">Connexion</a></li>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li><a href="{{ path('logout') }}">Déconnexion</a></li>
                <li><a href="{{ path('ft_recherche') }}" id="hrefRecherche">Recherche</a></li>
                <style>
                    #navBarConnexion {
                        display: none;
                    }
                </style>
            {% endif %}
        </ul>
    </div>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div style="border-top: solid; border-color: lightgrey; border-width: 1px;">
            <span style="margin-left: 30px;">
