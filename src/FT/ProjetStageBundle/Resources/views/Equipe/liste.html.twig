{% extends "FTProjetStageBundle::index.html.twig" %}

{% block body %}
    <div class="container">
        <h2>Liste des équipes</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Numéro de l'équipe</th>
                <th>Propriétaire</th>
                <th>Date de création</th>
            </tr>
            </thead>
            <tbody>
            {% for equipe in listeEquipes %}
                <tr>
                    <td>{{ equipe.id }}</td>
                    <td>
                        {% if app.user.username is same as (equipe.proprietaire.username) %}
                            Moi-même
                        {% else %}
                            {{ equipe.proprietaire.nom }} {{ equipe.proprietaire.prenom }}
                        {% endif %}
                    </td>
                    <td>{{ equipe.dateCreation|date('d/m/Y') }}</td>
                    <td>
                        <button class="btn btn-primary" type="submit"><a
                                    href="{{ path('ft_equipe_etudiants', {'id': equipe.id }) }}">Voir les membres</a>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}