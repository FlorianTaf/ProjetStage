{% extends "FTProjetStageBundle::index.html.twig" %}

{% block body %}
    <div class="container">
        <h2>Liste de mes projets créés</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Propriétaire</th>
                <th>Titre</th>
                <th>Sujet</th>
                <th>Date limite</th>
            </tr>
            </thead>
            <tbody>
            {% for projet in listeProjets %}
                <tr>
                    <td>
                        {% if app.user.username is same as (projet.proprietaire.username) %}
                            Moi-même
                        {% else %}
                            {{ projet.proprietaire.username }}
                        {% endif %}
                    </td>
                    <td>{{ projet.titre }}</td>
                    <td>{{ projet.sujet }}</td>
                    <td>{{ projet.dateLimite|date('d/m/Y') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}