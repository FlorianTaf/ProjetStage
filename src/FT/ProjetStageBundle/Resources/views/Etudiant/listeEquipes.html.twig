{% extends "FTProjetStageBundle::index.html.twig" %}

{% block body %}
    <div class="container">
        <h2>Liste de mes équipes</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Numéro de l'équipe</th>
                <th>Propriétaire</th>
                <th>Nombre de projets pour l'équipe</th>
            </tr>
            </thead>
            <tbody>
            {% for equipe in listeEquipes %}
                <tr>
                    <td>{{ equipe.id }}</td>
                    <td>{{ equipe.proprietaire.nom }} {{ equipe.proprietaire.prenom }}</td>
                    <td>{{ equipe.projets|length }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}